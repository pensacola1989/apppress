{{view Admin.HeaderView}}

<div id="app_list" class="row-fluid main">
    <div class="new">
        <a href="#" {{action createApp}}>Create<a/>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr class="header">
                <th>ID</td>
                <th>Name</td>
                <th>Description</td>
                <th>Action</td>
            </tr>
        <thead>
        <tbody>
            {{#each app in content}}
                <tr>
                    <td>{{app.id}}</td>
                    <td>{{app.name}}</td>
                    <td>{{app.descr}}</td>
                    <td>
                        <a href="#" {{action modifyApp app}}>Add Contents<a/> &nbsp;&nbsp;
                        <a href="#" {{action editApp app}}>Edit<a/> &nbsp;&nbsp;
                        <a href="#" {{action deleteApp app}}>Delete<a/> &nbsp;&nbsp;
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{view Admin.FooterView}}