
<div class="row-fluid">
	<div class="span12">
		<div id="main">
			<form id="signonForm" class="form-horizontal group cmxform w-600" action='{{reqPath "user/signon"}}' method="POST">
			  <legend>Sign On</legend>
			  <div class="control-group">
			    <label class="control-label" for="inputEmail">Email</label>
			    <div class="controls">
			      <input type="email" id="inputEmail" name="email"
			      	class="required email" >
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label" for="inputPassword">Password</label>
			    <div class="controls">
			      <input id="inputPassword" type="password" name="password"
			      	class="required " >
			    </div>
			  </div>
			  <div class="control-group">
			    <div class="controls">
			      <label class="checkbox">
			      	<input type="checkbox" name="rememberMe" checked="checked">Remember me
			      </label>
			      <button {{action signon}} class="btn btn-primary">Submit</button>&nbsp;&nbsp;
				  <button type="reset" class="btn">Reset</button>&nbsp;&nbsp;&nbsp;&nbsp;
				  {{#linkTo "user.signup"}}Register{{/linkTo}}&nbsp;&nbsp;
				  <a {{action guestSignon}} href="#">Guest</a>
			    </div>
			  </div>
			</form>
		</div>
	</div>
</div>